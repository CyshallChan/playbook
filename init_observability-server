- name: setup observability server 
  hosts: all
  user: root
  become: yes
  gather_facts: yes
  tasks:
    - include_role:
        name: observability-server
      vars:
        group: master
        namespace: monitoring
        db_namespace: database
        domain: svc.plus
        auto_issuance: false
        update_secret: true
        tls:
          - secret_name: obs-tls
            keyfile: /etc/ssl/svc.plus.key
            certfile: /etc/ssl/svc.plus.pem
